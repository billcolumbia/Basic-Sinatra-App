source 'https://rubygems.org'

# App
gem 'sinatra'

# Templating
gem 'slim'

group :development do
  # Sass compilation + tools
  gem 'compass'

  # JS Prepro
  gem 'coffee-script'

  # Live reload / compilation
  gem 'guard'
  gem 'guard-compass'
  gem 'guard-livereload'
  gem 'guard-coffeescript'
  gem 'guard-process'
end
